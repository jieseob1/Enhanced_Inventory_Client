{
    "compilerOptions": {
        "jsx": "react",
        "strict": true,
        "module": "ES6",
        "sourceMap": true,
        "moduleResolution": "node",
        "lib": ["ES2015","ES2016","ES2017","ES2018","ES2019","ES2020","DOM"],
        "target": "ES2015",
        "outDir": "./dist",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "allowJs": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/index.ts"]
}
